.gallery{
    display: flex;
    flex-wrap:wrap;
}
.gallery__img{
    max-width: 95%;
    max-height: 95%;
}
.gallery__item{
        width: 100%;
        height: 100%;
    }

@media(min-width:960px){
    .gallery__item{
        width: calc(100%/3);
        height: calc(100%3);
    }
}
@media (min-width: 768px) and (max-width: 959px) {
    .gallery__item{
        width: calc(100%/2);
        height: calc(100%2);
    }
}