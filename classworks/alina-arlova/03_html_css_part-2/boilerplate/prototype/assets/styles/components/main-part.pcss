.main-part {
  position: relative;
  background-image: url(/images/banner.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80%;

  @media (--desktop-viewport) {
    margin-left: 300px;
  }
}

.main-part__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 65%;
  padding-top: 80px;
  padding-bottom: 80px;
}

