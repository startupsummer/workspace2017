.btn {
    display: block;
    background-color: #81adab;
    font-size: 18px;
    border-radius: 10px;
    padding: 15px 40px;
    color: #fff;
    border: none;
    font-family: inherit;
    text-decoration: none;
    font-weight: 200;
}

@media (--desktop-viewport) {
    .btn {
        font-size: 22px;
        padding: 25px 60px;
        transition: background-color .2s ease-in-out;

        &:hover {
            background-color: #89bab7;
        }
    }
}