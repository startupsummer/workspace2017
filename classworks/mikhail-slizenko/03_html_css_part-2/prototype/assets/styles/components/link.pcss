.link {
    color: #fff;
    text-decoration: none;
    border-bottom: 2px dotted currentColor;
    cursor: pointer;
}

@media (--desktop-viewport) {
    .link {
        transition: border .2s ease;

        &:hover {
            border-bottom: 2px dotted rgba(255, 255, 255, 0);
        }
    }   
}