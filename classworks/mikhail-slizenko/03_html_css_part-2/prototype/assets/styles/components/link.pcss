.link {
    color: #fff;
    text-decoration: none;
    border-bottom: 1px dotted currentColor;
    cursor: pointer;
}

@media (--desktop-viewport) {
    .link {
        transition: border .3s ease;

        &:hover {
            border-bottom: 1px dotted rgba(255, 255, 255, 0);
        }
    }   
}