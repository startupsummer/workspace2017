.form__item {
  margin-bottom: 1em;
  padding: 1em;
  font-size: 2em;
  color: #888888;
	border: 1px solid #d0c8cb;
	border-radius: 0.4em;

  &:focus {
    box-shadow: 0 0 2px 1px #8ebebc;
  }

  &--name,
  &--email {
    width: 48%;
    height: 50px;

    @media (max-width: 800px) {
      width: 100%;
    }
  }

  &--message {
    width: 100%;
    height: 300px;
  }

}
