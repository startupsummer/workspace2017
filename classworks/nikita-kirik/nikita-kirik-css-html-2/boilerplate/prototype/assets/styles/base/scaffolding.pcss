@reset-global pc;



html {
  height: 100%;
  box-sizing: border-box;
  text-rendering: optimizeSpeed;
  font-size: var(--fontSize);

}

*,
::before,
::after {
  box-sizing: inherit;
}

body {
  height: 100%;
  min-width: var(--minWidth);
  font-family: var(--fontFamily);
  line-height: var(--lineHeight);
}

img {
  max-width: 100%;
  height: auto;
}

a {
  color: inherit;
  text-decoration: none;
}
