.button {
  background: #60dab8;
  border: none;
  border-radius: 4px;
  padding: 15px 19px;
  cursor: pointer;
  font-size: 18px;
  color: #f9f6f6;
  @media only screen and (max-width: 800px) {
    padding: 11px 13px;
    font-size: 10px;
  }
  &:focus {
    outline: none;
  }
  &:hover {
    background: #39cca3;
  }
}
