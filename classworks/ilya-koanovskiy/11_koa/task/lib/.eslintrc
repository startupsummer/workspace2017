{
  "env": {
    "mocha": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules":{
    "react/jsx-no-bind": [2, {
      "ignoreRefs": true,
      "allowArrowFunctions": false,
      "allowBind": false
    }],
    "arrow-body-style": [2, "as-needed"],
    "no-underscore-dangle": [0],
    "class-methods-use-this": [0]
  }
}
